<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, class: 'form-control' %>
</div>
<% if current_user.admin? || current_user.premium? %>
<div class="form-group">
  <%= f.label :private %>
  <%= f.check_box :private %>
</div>
<% end %>