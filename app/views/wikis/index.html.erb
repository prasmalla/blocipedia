<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <h2 class="media-heading">Wikis <small>[<%= @wikis.count %>]</small></h2>
        <% if policy(Wiki.new).create? %>
        <%= link_to new_wiki_path, class: 'btn btn-default pull-right' do %>
          <i class="glyphicon glyphicon-plus"></i> Add wiki
        <% end %>
        <% end %>
      </div>
    </div>
    <div class="media">
      <div class="media-body">
        <table class="table table-condensed">
          <%= render @wikis %>
        </table>
      </div>
    </div>
  </div>
</div>